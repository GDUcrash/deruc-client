{
	"name":"DeRuC Scratch Client",
	"version":"0.5.0",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["*://scratch.mit.edu/*"],
			"js": ["content.js"]
		}
	],
	"author": "Ucrash",

	"action": {
		"default_icon": {             
			"16": "images/icon16.png",
			"24": "images/icon24.png",
			"32": "images/icon32.png"
		},
		"default_title": "Добро Пожаловать в DeRuC!"
	},
	"description": "Client for DeRuC Scratch Community",
	"icons": { 
		"16": "images/icon16.png",
		"48": "images/icon48.png",
	   	"128": "images/icon128.png" 
	},

	"permissions": [
		"<all_urls>"
	]
}